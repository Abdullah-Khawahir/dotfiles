# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        output_format = i3bar
}

order += "tztime KB_LAYOUT"
order += "volume master"
order += "cpu_temperature 2"
# order += "cpu_temperature 1"
# order += "cpu_temperature 0"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
#order += "load"
order += "memory"
order += "tztime local"

tztime KB_LAYOUT {
        format = "KB_LAYOUT"
}

cpu_temperature 2 {
        format = "%degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
#		/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp2_input
#		/sys/devices/platform/coretemp.0/hwmon/hwmon4

}

cpu_temperature 1 {
        format = "%degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp2_input"
}

cpu_temperature 0 {
        format = "%degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
    format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
    format = "%status %percentage %remaining"
}

disk "/" {
    format = "FREE:%avail"
}

load {
    format = "%1min"
}

memory {
        format = "U: %used / R: %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
    format = " %U:%A | %eth of %b %Y | %Y-%m-%d | %r"

}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
#device = "pulse:alsa_output.pci-0000_00_14.2.analog-stereo"
}

